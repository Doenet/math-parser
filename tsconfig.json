{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES6",
    "downlevelIteration": true,
    "module": "commonjs",
    "declaration": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "lib": ["es6", "dom"],
    "noLib": false,
    "sourceMap": true,
    "outDir": "js",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["ts/**/*"],
  "exclude": ["js"]
}
